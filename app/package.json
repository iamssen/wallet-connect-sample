{
  "name": "app",
  "version": "1.0.0",
  "scripts": {
    "start": "multiplerun dev",
    "pack": "rocket-punch build --strict",
    "publish": "rocket-punch publish",
    "test": "jest --colors",
    "coverage": "jest --coverage",
    "precommit": "lint-staged"
  },
  "multiplerun": {
    "dev": [
      {
        "command": "TS_NODE_PROJECT=tsconfig.script.json INSPECT_CHROME=9222 node -r ts-node/register -r tsconfig-paths/register scripts/start.app.ts",
        "wait": 3000
      },
      "TS_NODE_PROJECT=tsconfig.script.json INSPECT_CHROME=9222 node -r ts-node/register -r tsconfig-paths/register scripts/start.wallet.ts"
    ]
  },
  "lint-staged": {
    "src/{**/*,*}/*.{ts,tsx}": [
      "jest --colors --findRelatedTests"
    ]
  },
  "devDependencies": {
    "@rocket-scripts/web": "^3.0.0",
    "@types/jest": "^26.0.22",
    "@types/puppeteer": "^5.4.3",
    "@types/qrcode": "^1.4.0",
    "@types/qrcode.react": "^1.0.1",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.9",
    "@types/webpack-env": "^1.16.0",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "multiplerun": "^2.0.1",
    "puppeteer": "^6.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rocket-punch": "^2.5.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@anchor-protocol/notation": "^0.1.0",
    "@terra-money/terra.js": "^1.6.0",
    "@walletconnect/client": "^1.4.1",
    "@walletconnect/qrcode-modal": "^1.4.1",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "process": "^0.11.10",
    "qrcode": "^1.4.4",
    "qrcode.react": "^1.0.1",
    "react-use-clipboard": "^1.0.7",
    "rxjs": "^6.6.7",
    "stream-browserify": "^3.0.0",
    "styled-components": "^5.2.3"
  }
}
